source :rubygems

# Runtime dependencies
group(:runtime) do
  gem 'sequel'          , ['>= 3.20.0']
  gem 'ramaze'          , ['>= 2011.01.30']
  gem 'bcrypt-ruby'     , ['>= 2.1.4']
  gem 'json'            , ['>= 1.5.1']
  gem 'sequel_sluggable', ['>= 0.0.6']
  gem 'commander'       , ['>= 4.0.4']
  gem 'rake'            , ['>= 0.8.7']
  gem 'loofah'          , ['>= 1.0.0']
end

# Gems only required when developing Zen itself
group(:development) do
  # Capybara/Selenium breaks with Rack 1.3 so in order to be able to run the tests we'll
  # install 1.2.3 instead.
  gem 'rack', ['= 1.2.3']

  gem 'rdiscount', ['>= 1.6.8']
  gem 'RedCloth' , ['>= 4.2.7']
  gem 'rspec'    , ['>= 2.5.0']
  gem 'yard'     , ['>= 0.6.5']
  gem 'capybara' , ['>= 0.4.1.2']
  gem 'rack-test', ['>= 0.5.7']
  gem 'sqlite3'  , ['>= 1.3.3']
  gem 'defensio' , ['>= 0.9.1']
end
